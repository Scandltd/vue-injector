{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2020",
      "ES2020.Promise",
      "ES2019.Object",
      "ESNext",
      "ES2015.core"
    ],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDirs": ["./"],
    "paths": {
      "@scandltd/vue-injector": ["./src"]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "node",
      "jest",
      "core-js",
      "reflect-metadata"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.vue"
  ]
}